define User {
  id: number
  name: string
  age: number & min(0) & max(120)
  role: admin | user | guest
}

define Product {
  id: number
  name: string
  price: number & positive
  category: electronics | clothing | food

  when category = electronics {
    warranty: number
    specs: record<string, string>
  } else when category = clothing {
    size: S | M | L | XL
    material: string
  } else {
    organic: boolean?
  }
}

validate User.age >= 18