{
  "name": "fsc-extension",
  "displayName": "FSC - ReliantType Compiler",
  "description": "VSCode extension for .fsc files with real-time type checking and syntax highlighting",
  "version": "0.1.2",
  "publisher": "NEHONIX",
  "icon": "assets/ms-icon-144x144.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "fsc",
    "reliant-type",
    "schema",
    "validation",
    "typescript",
    "compiler",
    "real-time"
  ],
  "activationEvents": [
    "onLanguage:fsc",
    "onCommand:fsc.validate",
    "onCommand:fsc.compile",
    "onCommand:fsc.watch"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fsc",
        "aliases": ["FSC", "fsc"],
        "extensions": [".fsc"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/fsc-icon.svg",
          "dark":  "./assets/fsc-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "fsc",
        "scopeName": "source.fsc",
        "path": "./syntaxes/fsc.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "fsc",
        "path": "./snippets/fsc-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "fsc.validate",
        "title": "Validate FSC File",
        "category": "FSC"
      },
      {
        "command": "fsc.compile",
        "title": "Compile FSC to TypeScript",
        "category": "FSC"
      },
      {
        "command": "fsc.watch",
        "title": "Watch FSC Files",
        "category": "FSC"
      },
      {
        "command": "fsc.createSchema",
        "title": "Create New FSC Schema",
        "category": "FSC"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "fsc.createSchema",
          "when": "explorerResourceIsFolder",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "fsc.validate",
          "when": "resourceExtname == .fsc"
        },
        {
          "command": "fsc.compile",
          "when": "resourceExtname == .fsc"
        }
      ]
    },
    "configuration": {
      "title": "FSC Extension",
      "properties": {
        "fsc.enableRealTimeValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time validation as you type"
        },
        "fsc.compilerPath": {
          "type": "string",
          "default": "",
          "description": "Path to FSC compiler binary (leave empty to use bundled)"
        },
        "fsc.outputDirectory": {
          "type": "string",
          "default": "./generated",
          "description": "Default output directory for compiled TypeScript files"
        },
        "fsc.enableSyntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable FSC syntax highlighting"
        },
        "fsc.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense for FSC files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-compiler": "cd ../fsc-compiler/fsc && cargo build --release",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/Nehonix-Team/reliant-type.git"
  },
  "bugs": {
    "url": "https://github.com/Nehonix-Team/reliant-type/issues"
  },
  "homepage": "https://github.com/Nehonix-Team/reliant-type#readme",
  "license": "MIT"
}