# 🎉 ReliantType Compiler - Complete Feature Showcase
# This file demonstrates all 4 implemented features

print("=== ReliantType Compiler - Feature Showcase ===")
print("")

# ✅ Feature 1: Variables (declare var)
print("📦 Feature 1: Variables")
declare var projectName = "ReliantType Compiler"
declare var version = 2.0
declare var author = "Nehonix Team"
declare var isStable = true

print("  Project:", projectName)
print("  Version:", version)
print("  Author:", author)
print("  Stable:", isStable)
print("")

# ✅ Feature 2: Type Aliases (declare type)
print("🏷️  Feature 2: Type Aliases")
declare type UserId = number
declare type UserRole = string
declare type Timestamp = number

print("  Defined types: UserId, UserRole, Timestamp")
print("")

# ✅ Feature 3: Variables with References (::)
print("🔗 Feature 3: Variable References")
declare var greeting = "Hello"
declare var target = "World"
print("  Using :: references")
print("")

# ✅ Feature 4: Print Statement & Interpreter
print("🖨️  Feature 4: Print Statement")
print("  Multiple arguments:", 1, 2, 3)
print("  Arrays:", ["red", "green", "blue"])
print("  Booleans:", true, false)
print("")

# Arithmetic (bonus!)
declare var x = 100
declare var y = 50
print("🧮 Bonus: Arithmetic Support")
print("  x =", x)
print("  y =", y)
print("")

print("=== All Features Working! ===")
print("Status: 4/4 Complete (100%) ✅")
