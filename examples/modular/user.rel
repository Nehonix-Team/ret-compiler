# User schema - standalone, no imports needed

define User {
  id: uuid
  createdAt: date
  updatedAt: date
  
  # User-specific fields
  email: email
  username: string & minLength(3) & maxLength(20)
  role: admin | user | moderator | guest
  
  when role = admin {
    adminToken: string
    permissions: string[]
  }
}

export User
